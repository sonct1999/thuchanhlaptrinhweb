@model IEnumerable<BigSchool.Models.Course>

@{
    ViewBag.Title = "Mine";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Mine</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="row">
    <ul class="course">
        @foreach (var course in Model)
        {
        <li>
            <div class="date">
                <div class="month">
                    @course.Datetime.ToString("MM")
                </div>
                <div class="day">
                    @course.Datetime.ToString("dd")
                </div>
            </div>
            <div class="details">
                <span class="lecture">
                    @course.LectureName
                </span>
                <div>
                    <span class="category">
                        @course.Category.Name
                    </span>
                </div>
            </div>
            <div class="action">
                <a href="@Url.Action("Edit", "Courses", new { id = course.Id })">Edit</a>
                <a href="@Url.Action("Delete", "Courses", new { id = course.Id })">Delete</a>
            </div>
        </li>
        }
    </ul>
